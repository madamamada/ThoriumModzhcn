Items: {
	CursedTotem: {
		DisplayName: 诅咒图腾像
		Tooltip:
			'''
			召唤着魔的丛林蜥蜴雕像为你而战
			无法被放置在平台上
			'''
	}

	GraspofGrass: {
		DisplayName: 草木之触
		Tooltip:
			'''
			发射种子并以六次攻击为一轮循环
			前两次攻击会以较慢的间隔发射有毒的高伤害种子
			然后三次连发会快速发射有毒的较低伤害种子
			最后一次攻击会发射一个可以穿透多个目标的荆棘球
			手持该武器时，一只花仙会为你而战
			花仙会造成召唤伤害，受到召唤师职业加成
			花仙只会攻击被召唤标记的目标
			用子弹击中攻击敌怪以选择召唤标记目标（标记图标无法显示）
			使用种子或飞镖作为弹药
			"触摸一些草"
			'''
	}

	LihzahrdKey: {
		DisplayName: 丛林蜥蜴之钥
		Tooltip:
			'''
			召唤一台可骑乘的石巨人机甲服
			"我把新巨石放在机甲上"
			'''
	}

	ScorchedEarth: {
		DisplayName: 烧焦大地
		Tooltip:
			'''
			发射一道快速移动的箭矢
			长按蓄力以发射三束较慢的焰火箭矢
			焰火箭矢会追踪并点燃目标
			焰火箭矢初次命中敌人会爆炸
			点按箭矢会使着火了！(debuff)的目标爆炸
			'''
	}

	Sunbracers: {
		DisplayName: 太阳索
		Tooltip:
			'''
			将火箭转换为持续存在一段时间的迷你太阳
			迷你太阳会定期迸发火焰弹燃烧目标
			"能源保险装置以1000银的价格单独出售"
			'''
	}

	TempleLink: {
		DisplayName: 神庙灯笼
		Tooltip:
			'''
			将使用者传送至神庙祭坛
			谁能想到丛林蜥蜴会用岩浆做灯笼？
			'''
	}
}

